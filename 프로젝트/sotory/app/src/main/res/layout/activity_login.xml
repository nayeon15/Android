<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    tools:context=".Login_Activity">

    <TextView
        android:id="@+id/logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/dusk"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFBDBD"
        android:text="소소한 일상을 담은\nsotory"
        android:textSize="50sp" />

    <com.google.android.material.textfield.TextInputLayout
        app:hintTextColor="#ffbdbd"
        app:boxStrokeColor="#ffbdbd"
        android:textColorHint="#ffbdbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_tv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:inputType="textEmailAddress"
        android:hint="Email" />
</RelativeLayout>